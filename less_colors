black=0
red=1
green=2
yellow=3
blue=4
magenta=5
cyan=6
white=7

normal=$green
bold=$magenta
underline=$cyan
standout=$magenta
blink=$yellow

export LESS_TERMCAP_md=$(tput bold;  tput setaf $bold)      # start bold
export LESS_TERMCAP_mb=$(tput blink; tput setaf $blink)     # start blink
export LESS_TERMCAP_so=$(tput smso;  tput setaf $standout)  # start standout
export LESS_TERMCAP_us=$(tput smul;  tput setaf $underline) # start underline
export LESS_TERMCAP_ue=$(tput sgr0;  tput setaf $normal)    # stop underline
export LESS_TERMCAP_se=$(tput rmso)                         # stop standout
export LESS_TERMCAP_me=$(tput sgr0;  tput setaf $normal)    # turn off bold, blink, and underline

